<UserControl x:Class="NormalizedSystems.Net.Designers.CloseableTabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NormalizedSystems.Net.Designers"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <TextBlock Name="headerText" Margin="0,0,4,0">Header Text</TextBlock>
        <Button Click="OnClick" Background="Red">
            <Path Data="M1,9 L9,1 M1,1 L9,9" Stroke="White" StrokeThickness="2" Margin="2"  />
        </Button>
    </DockPanel>
</UserControl>
